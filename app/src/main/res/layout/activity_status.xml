<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android-bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.nirasan.tricklelist.StatusActivity">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow0"
            >

            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android-bootstrap:fa_icon="fa-meh-o"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/fatext_col0"
                android:textColor="@color/gray"
                />
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android-bootstrap:fa_icon="fa-meh-o"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/fatext_col1"
                android:textColor="@color/gray"
                />
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android-bootstrap:fa_icon="fa-meh-o"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/fatext_col2"
                android:textColor="@color/gray"
                />
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android-bootstrap:fa_icon="fa-meh-o"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/fatext_col3"
                android:textColor="@color/gray"
                />
            </TableRow>
    </TableLayout>
</RelativeLayout>
